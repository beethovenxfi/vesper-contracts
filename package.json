{
  "name": "vesper-contracts",
  "version": "1.0.0",
  "description": "Contracts for Vesper holding pools",
  "private": true,
  "scripts": {
    "solhint": "lerna run solhint",
    "solhint:fix": "lerna run solhint:fix",
    "lint": "eslint --cache .",
    "hardhat": "lerna run hardhat",
    "clean": "lerna run clean --stream",
    "compile": "lerna run compile --stream",
    "build": "npm run clean && npm run compile",
    "coverage": "lerna run coverage --stream",
    "deploy": "lerna run deploy --stream",
    "create-release": "lerna run create-release --stream",
    "fork": "lerna run fork --stream",
    "test": "lerna run test --stream",
    "prepare": "husky install",
    "postinstall": "patch-package && lerna bootstrap",
    "lerna": "lerna",
    "verify": "lerna run verify --stream"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "chai-almost": "^1.0.1",
    "dotenv": "^16.0.1",
    "eslint": "^8.17.0",
    "eslint-config-bloq": "^3.2.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.2",
    "eslint-plugin-mocha": "^10.0.5",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-require-path-exists": "^1.1.9",
    "hardhat": "^2.10.1",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.11",
    "hardhat-log-remover": "^2.0.2",
    "husky": "^8.0.1",
    "lerna": "^5.1.4",
    "lint-staged": "^13.0.1",
    "patch-package": "^6.4.7",
    "prettier-plugin-solidity": "1.0.0-beta.24",
    "solc": "0.8.9",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "0.0.5"
  }
